window-width=160
window-height=48

background-opacity=0.9
background-blur=true

# cursor-style = block
# cursor-style-blink = false
# shell-integration-features = no-cursor

font-family = "Maple Mono CN"
font-family = "Maple Mono Normal CN"
font-family = "JetBrains Mono"
font-family = "Fira Code"

## Keybind

# To use quick terminal on macOS, check Privacy > Accessibility
# permissions in the system settings to make it work
keybind = global:ctrl+backquote=toggle_quick_terminal

keybind = ctrl+a>r=reload_config

# Ghostty uses [fixterms](https://www.leonerd.org.uk/hacks/fixterms/) by
# default, not the "legacy encoding"

# Make `C-[` equal to Esc
keybind = ctrl+left_bracket=text:\x1b

# Log
keybind = ctrl+a>shift+l=write_scrollback_file:paste

### Window

keybind = ctrl+a>w=new_window

### Tab

keybind = ctrl+a>ctrl+l=next_tab
keybind = ctrl+a>ctrl+h=previous_tab

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=prompt_surface_title

keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=goto_tab:9

### Pane

keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>l=goto_split:right

keybind = ctrl+a>shift+\=new_split:right
keybind = ctrl+a>-=new_split:down
keybind = ctrl+a>s=new_split:auto

keybind = ctrl+a>z=toggle_split_zoom

keybind = ctrl+a>x=close_surface

