{
  "editor.fontFamily": "'JetBrains Maple Mono', 'JetBrainsMono Nerd Font', 'FiraCode Nerd Font', 'ComicShannsMono Nerd Font', 'LXGW WenKai Mono', 'Sarasa Mono SC', monospace",
  "editor.fontSize": 15,
  // Vim.
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.useCtrlKeys": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.showHover"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "i"
      ],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "n"
      ],
      "commands": [
        "editor.action.rename"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    {
      "before": [
        "g",
        "s"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ]
    },
    {
      "before": [
        "g",
        "S"
      ],
      "commands": [
        "workbench.action.showAllSymbols"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "after": [
        "z",
        "z"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ]
    },
    {
      "before": [
        "<leader>",
        "S"
      ],
      "commands": [
        "workbench.action.showAllSymbols"
      ]
    },
    {
      "before": [
        "<leader>",
        "/"
      ],
      "commands": [
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": [
        "<leader>",
        "<leader>"
      ],
      "commands": [
        "workbench.action.showCommands"
      ],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "[",
        " "
      ],
      "after": [
        "O",
        "<Esc>"
      ]
    },
    {
      "before": [
        "]",
        " "
      ],
      "after": [
        "o",
        "<Esc>"
      ]
    },
    {
      "before": [
        "[",
        "b"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "]",
        "b"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prevInFiles"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.nextInFiles"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "[",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    {
      "before": [
        "]",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "[",
        "g"
      ],
      "commands": [
        "workbench.action.editor.previousChange"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "]",
        "g"
      ],
      "commands": [
        "workbench.action.editor.nextChange"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "[",
        "t"
      ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "]",
        "t"
      ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "<C-a>"
      ],
      "commands": [
        "cursorHome"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-e>"
      ],
      "commands": [
        "cursorEnd"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-b>"
      ],
      "commands": [
        "cursorLeft"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-f>"
      ],
      "commands": [
        "cursorRight"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-d>"
      ],
      "commands": [
        "deleteRight"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-k>"
      ],
      "commands": [
        "deleteAllRight"
      ],
      "when": "editorTextFocus"
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "]",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "[",
        "e"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    }
  ],
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-n>": false,
    "<C-p>": false,
    "<C-z>": false
  },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "window.autoDetectColorScheme": true,
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker"
}
